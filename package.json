{
  "name": "website-design",
  "version": "0.12.3",
  "description": "Website design for the University of Alabama at Birmingham's Department of Information Technology",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "js:lint": "npx standard 'src/js/*.js'",
    "js:lint--fix": "npx standard 'src/js/*.js' --fix",
    "js:concat": "concat -o dist/it-custom.js src/js/interactive-cards.js src/js/vendor/sidebar.js src/js/vendor/toc.js src/js/twitter-timeline.js src/js/google-sheet.js src/js/search-list.js src/js/vendor/lazy-load.js src/js/vendor/enllax.js",
    "css:dev": "sass --load-path=node_modules --no-source-map --style=expanded src/scss/it-custom.scss build/it-custom.css",
    "ar:css": "sass --load-path=node_modules --no-source-map --style=expanded src/scss/08-pages/_annual-report.scss build/itar-custom.css",
    "css:prod": "sass --load-path=node_modules --no-source-map --style=compressed src/scss/it-custom.scss dist/it-custom-min.css",
    "css:lint": "npx stylelint 'src/**/*.scss'",
    "css:lint--fix": "npx stylelint 'src/**/*.scss' --fix",
    "build": "npm run css:prod && npm run js:concat"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UAB-IT/website-design.git"
  },
  "homepage": "https://github.com/UAB-IT/website-design#readme",
  "devDependencies": {
    "concat": "^1.0.3",
    "sass": "^1.24.0",
    "standard": "^14.3.1",
    "stylelint": "^13.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.14.2"
  },
  "dependencies": {
    "@mattmcadams/stratus": "^1.0.0"
  }
}
